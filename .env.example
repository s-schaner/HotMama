# VolleySense Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
VOLLEYSENSE_HOST=0.0.0.0
VOLLEYSENSE_PORT=7860
VOLLEYSENSE_DEBUG=false
VOLLEYSENSE_LOG_LEVEL=INFO

# Directory Configuration
VOLLEYSENSE_ROOT_DIR=.
VOLLEYSENSE_SESSIONS_DIR=./sessions
VOLLEYSENSE_LOG_DIR=./sessions/logs

# Database Configuration (optional - defaults to SQLite in sessions dir)
# VOLLEYSENSE_DB_URL=sqlite:///./sessions/volleysense.db

# Upload Limits
VOLLEYSENSE_MAX_FILE_SIZE_MB=500
VOLLEYSENSE_ALLOWED_VIDEO_EXTENSIONS=[".mp4",".avi",".mov",".mkv",".webm",".flv"]

# Video Processing Defaults
VOLLEYSENSE_DEFAULT_FPS=3
VOLLEYSENSE_DEFAULT_MAX_FRAMES=48
VOLLEYSENSE_DEFAULT_JPEG_QUALITY=85

# LLM Configuration
VOLLEYSENSE_DEFAULT_LLM_ENDPOINT=https://api-inference.huggingface.co
VOLLEYSENSE_DEFAULT_LLM_MODEL=Qwen/Qwen2.5-VL-32B-Instruct
VOLLEYSENSE_LLM_TIMEOUT_SECONDS=120
VOLLEYSENSE_LLM_MAX_TOKENS=256
VOLLEYSENSE_LLM_TEMPERATURE=0.2

# API Security
# VOLLEYSENSE_AUTH_TOKEN=your_secret_token_here
VOLLEYSENSE_ENABLE_CORS=false
VOLLEYSENSE_CORS_ORIGINS=["*"]

# Rate Limiting
VOLLEYSENSE_ENABLE_RATE_LIMITING=true
VOLLEYSENSE_RATE_LIMIT_PER_MINUTE=10

# Performance
VOLLEYSENSE_ENABLE_CACHING=true
VOLLEYSENSE_CACHE_TTL_SECONDS=3600

# Hugging Face API (if using HF endpoints)
# HF_TOKEN=your_huggingface_token
# HF_OPENAI_ENDPOINT=https://api-inference.huggingface.co

# OpenAI API (if using OpenAI)
# OPENAI_API_KEY=your_openai_api_key
